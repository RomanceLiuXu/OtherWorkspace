<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.-->
<!-- Hibernate主配置文件 -->
<hibernate-configuration>
<!-- 连接工厂，帮助创建多个连接 -->
	<session-factory>
	<!-- 数据库方言，行话 
	 通过方言告诉Hibernate框架底层使用的是什么数据库，然后Hibernate会
	 自动生成对应其数据库的sql语句，通过修改方言可以实现数据库移植
	-->
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<!-- 连接数据库的url地址 -->
		<property name="connection.url">jdbc:mysql://localhost:3306/marry?useUnicode=true&amp;characterEncoding=UTF-8</property>
		<!-- 访问数据库的用户名 -->
		<property name="connection.username">root</property>
		<!-- 访问数据库的密码 -->
		<property name="connection.password">123456</property>
		<!-- 访问数据库的驱动类  -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- 是否在控制台打印显示sql语句 -->
		<property name="show_sql">
			true
		</property>
		<!-- 以格式化形式打印sql语句 -->
		<property name="format_sql">
			true
		</property>
		<!-- 关联加载映射文件 -->
		<mapping resource="com/liuxu/beans/User.hbm.xml" />
		<mapping resource="com/liuxu/beans/Picture.hbm.xml" />
	</session-factory>
</hibernate-configuration>