<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.-->
<!-- Hibernate主配置文件 -->
<hibernate-configuration>
<!-- 连接工厂，帮助创建多个连接 -->
	<session-factory>
	<!-- 数据库方言，行话 
	 通过方言告诉Hibernate框架底层使用的是什么数据库，然后Hibernate会
	 自动生成对应其数据库的sql语句，通过修改方言可以实现数据库移植
	-->
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<!-- 连接数据库的url地址 -->
		<property name="connection.url">jdbc:mysql://localhost:3306/sumioa?useUnicode=true&amp;characterEncoding=UTF-8</property>
		<!-- 访问数据库的用户名 -->
		<property name="connection.username">root</property>
		<!-- 访问数据库的密码 -->
		<property name="connection.password">123456</property>
		<!-- 访问数据库的驱动类  -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- 给当前线程绑定session对象 -->
		<property name="hibernate.current_session_context_class">
		thread
		</property>
		<!-- 开启二级缓存 -->
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<!-- 指定二级缓存供应商 -->
		<property name="hibernate.cache.provider_class">net.sf.ehcache.hibernate.EhCacheProvider</property>
		<!-- 开启查询缓存 -->
		<property name="hibernate.cache.use_query_cache">true</property>
		<!-- 是否在控制台打印显示sql语句 -->
		<property name="show_sql">
			true
		</property>
		<!-- 以格式化形式打印sql语句 -->
		<property name="format_sql">
			true
		</property>
		<!-- 关联加载映射文件 -->
		<mapping resource="com/lanou/bean/Dept.hbm.xml" />
		<mapping resource="com/lanou/bean/Emp.hbm.xml" />
		<mapping resource="com/lanou/bean/Student.hbm.xml"/>
		<mapping resource="com/lanou/bean/Book.hbm.xml" />
		<mapping resource="com/lanou/bean/Employee.hbm.xml" />
		<mapping resource="com/lanou/bean/Project.hbm.xml" />
		<mapping resource="com/lanou/bean/User.hbm.xml" />
		<mapping resource="com/lanou/bean/Card.hbm.xml" />
		<mapping resource="com/lanou/bean/Attendance.hbm.xml" />
		<!-- 指定类级别的二级缓存 -->
		<class-cache usage="read-only" class="com.lanou.bean.Student"/>
		<class-cache usage="read-only" class="com.lanou.bean.Book"/>
		<!-- 指定集合级别的二级缓存 -->
		<collection-cache usage="read-only" collection="com.lanou.bean.Student.books"/>
	</session-factory>
</hibernate-configuration>